<body>
<%-include('partials/header')  %>
    <!-- navbar -->
  <!-- sliding photos and content -->
    <div class="slide-1">
        <div class="slide-2"></div>
        <div class="slide-3"><b><h2>Welcome to ShelterSeek!</h2></b>Discover your perfect travel destination with just a click.Explore, plan, and create unforgettable memories. Whether you're seeking adventure, relaxation, or cultural experiences, we've got something for every traveler. Join us on a journey that brings your dream getaway to life!</div>
    </div>

    <br>

    <hr style="opacity: 0.3;">

    <div class="filter"><button id="filter-button"><i class="fa fa-sliders" ></i><span >filter</span></button></div>
   <div class="filter-menu">
        <div class="filter-close"><button id="filter-close-button">&times;</button></div>
        <!-- date in -->
        <div class="filter-group">
            <label for="check-in"><b>Check-in Date:</b></label>
            <div class="date-in">
                <input type="date" id="check-in" name="check-in-date">
            </div>
        </div>

        <div class="filter-group-1">
            <label><b>Days:</b></label>
            <div class="counter">
                <button id="sub-days">-</button>
                <span id="days">1</span>
                <button id="add-days">+</button>
            </div>
        </div>

        <!-- shared or full room -->
        <div class="filter-group">
            <label><b>Room Type:</b></label>
            <div class="radio-group" id="room-type">
                <label class="radio-option"><input type="radio" name="room" value="any" checked> Any</label>
                <label class="radio-option"><input type="radio" name="room" value="shared"> Shared</label>
                <label class="radio-option"><input type="radio" name="room" value="full"> Full</label>
            </div>
        </div>
        

        <div class="filter-group-1">
            <label><b>Bedrooms:</b></label>
            <div class="counter">
                <button id="sub-bedroom">-</button>
                <span id="bedrooms">1</span>
                <button id="add-bedroom">+</button>
            </div>
        </div>
        
        <div class="filter-group-1">
            <label><b>Beds:</b></label>
            <div class="counter">
                <button id="sub-beds">-</button>
                <span id="beds">1</span>
                <button id="add-beds">+</button>
            </div>
        </div>
        
        <div class="filter-group-1">
            <label><b>Adults:</b></label>
            <div class="counter">
                <button id="sub-adults">-</button>
                <span id="adults">0</span>
                <button id="add-adults">+</button>
            </div>
        </div>
        
        <div class="filter-group-1">
            <label><b>Children:</b></label>
            <div class="counter">
                <button id="sub-childrens">-</button>
                <span id="childrens">0</span>
                <button id="add-childrens">+</button>
            </div>
        </div>

        <!-- price -->
        <div class="filter-group">
            <div class="double-slider-box">
                <h3 class="range-title">Price Range</h3>
                
                <div class="range-slider">
                    <div class="range-selected"></div>
                </div>
            
                <div class="range-input">
                    <input type="range" class="min-input" min="500" max="10000" value="500">
                    <input type="range" class="max-input" min="500" max="10000" value="9500">
                </div>
            
                <div class="range-price">
                    <label for="min-price">Min:&nbsp;&#8377;</label>
                    <input class="min-price" style="background-color: none;border:none;padding:none;font-size:medium">
                    
                    <label for="max-price">Max:&nbsp;&#8377;</label>
                    <input class="max-price" style="background-color: none;border:none;padding:none;font-size:medium">
                </div>
            </div>
            
        </div>

<!-- room type -->
        <div class="filter-group">
            <label><b>Type of House:</b></label>
            <div class="room-options">
                <div class="room-box" data-value="pg">PG</div>
                <div class="room-box" data-value="house">House</div>
                <div class="room-box" data-value="resort">Resort</div>
                <div class="room-box" data-value="villa">Villa</div>
                <div class="room-box" data-value="duplex">Duplex</div>
                <div class="room-box" data-value="cottage">Cottage</div>
                <div class="room-box" data-value="apartment">Apartment</div>
                <div class="room-box" data-value="hostels">Hostels</div>
                <div class="room-box" data-value="farm">Farm House</div>
            </div>
            <input type="hidden" id="selected-room-types" name="room" value="">
        </div>

        <!-- room location -->


        <div class="filter-group">
            <label><b>Room Location:</b></label>
            <div class="multi-select" id="room-location">
              <div class="select-box" data-value="in-town">In Town</div>
              <div class="select-box" data-value="outside-town">Outside of Town</div>
              <div class="select-box" data-value="nearby-villages">Nearby Villages</div>
              <div class="select-box" data-value="residential-area">Residential Area</div>
              <div class="select-box" data-value="commercial-area">Commercial Area</div>
              <div class="select-box" data-value="near-highway">Near Highway</div>
              <div class="select-box" data-value="countryside">Countryside</div>
            </div>
            <input type="hidden" id="selected-room-location" name="room-location" value="">
          </div>


        <!-- Room Near Transport Station -->
        <div class="filter-group">
            <label><b>Room Near a Transport Station:</b></label>
            <div class="radio-group" id="transport-station">
                <label class="radio-option"><input type="radio" name="room-distance" value="any" checked> Any</label>
                <label class="radio-option"><input type="radio" name="room-distance" value="2km"> 2 km</label>
                <label class="radio-option"><input type="radio" name="room-distance" value="5km"> 5 km</label>
                <label class="radio-option"><input type="radio" name="room-distance" value="10km"> 10 km</label>
            </div>
        </div>

        <!-- Room Size -->
        <div class="filter-group">
            <label><b>Room Size:</b></label>
            <div class="radio-group" id="room-size">
                <label class="radio-option"><input type="radio" name="room-size" value="any" checked> Any</label>
                <label class="radio-option"><input type="radio" name="room-size" value="small"> Small</label>
                <label class="radio-option"><input type="radio" name="room-size" value="medium"> Medium</label>
                <label class="radio-option"><input type="radio" name="room-size" value="large"> Large</label>
            </div>
        </div>

        <!-- Amenities -->
        <div class="filter-group">
            <label><b>Amenities:</b></label>
            <div class="multi-select" id="amenities">
                <div class="select-box" data-value="wifi">WiFi</div>
                <div class="select-box" data-value="ac">AC</div>
                <div class="select-box" data-value="laundry">Laundry</div>
                <div class="select-box" data-value="hotwater">Hot Water</div>
                <div class="select-box" data-value="lift">Lift</div>
                <div class="select-box" data-value="car-parking">Free Car Parking</div>
                <div class="select-box" data-value="ev-charging">EV Charging</div>
            </div>
            <input type="hidden" id="selected-amenities" name="amenities" value="">
        </div>

        <!-- Host Gender -->
        <div class="filter-group">
            <label><b>Host Gender:</b></label>
            <div class="radio-group" id="host-gender">
                <label class="radio-option"><input type="radio" name="host" value="any" checked> Any</label>
                <label class="radio-option"><input type="radio" name="host" value="male"> Male</label>
                <label class="radio-option"><input type="radio" name="host" value="female"> Female</label>
                <label class="radio-option"><input type="radio" name="host" value="family"> Family-friendly</label>
            </div>
        </div>

        <!-- Food Preferences -->
        <div class="filter-group">
            <label><b>Food Preferences:</b></label>
            <div class="multi-select" id="food-preferences">
                <div class="select-box" data-value="vegetarian">Vegetarian</div>
                <div class="select-box" data-value="non-vegetarian">Non-Vegetarian</div>
            </div>
            <input type="hidden" id="selected-food" name="food" value="">
        </div>
        

        <div class="filter-search">
            <button id="filter-search-button">search</button>
        </div>
    </div>
